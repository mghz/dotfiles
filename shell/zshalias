# directories
alias ....='cd ../../..'
alias ...='cd ../..'
alias ..='cd ..'
alias cd3='cd ../../..'
alias cd4='cd ../../../..'

# commands
alias c='clear'
alias x='exit'
alias lg='ls -la1 --group-directories-first'
alias cpi='cp -iv'
alias h='history'
alias j='jobs -l'
alias mk='mkdir -p'
alias mv='mv -iv'
alias path='echo -e ${PATH//:/\\n}'
alias rm='rm -i'
alias rmf='rm -rf'
alias which='type -a'

# config files
alias vim='nvim'
alias vimrc='vim ~/.vimrc'
alias neorc='vim ~/.config/nvim/init.vim'
alias rel='source ~/.zshrc'
alias relb='source ~/.bashrc'
alias zrc='vim ~/dotfiles/shell/zshrc'
alias bashrc='vim ~/.bashrc'
alias bashp='vim ~/.bash_profile'
alias alrc='vim ~/dotfiles/shell/zshalias'
alias gitrc='vim ~/.gitconfig'
alias tagrc='vim ~/.ctags'
alias epath='vim /etc/paths.d'
alias path='echo "${PATH//:/\n}"'

# networking
alias ping='ping -c 4'

# common
alias grep='grep -n'
alias pre='open -a Preview'
alias text='open -a TextEdit'
alias mup='brew update && brew outdated --cask && brew upgrade && brew cleanup && brew doctor'
alias lup='sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y && sudo apt autoclean && sudo snap refresh'

# docker
alias dk='docker'
alias dki='docker image'
alias dke='docker exec'
alias dkrm='docker rm -f $(docker ps -aq)'
alias dm='docker-machine'
alias dc='docker-compose'

# multipass
alias mp='multipass'

# rust
alias cb='cargo fmt; cargo build'
alias cf='cargo fmt'
alias co='cargo'
alias cr='cargo run'
alias ct='cargo test'
alias cw='cargo watch -x run'
alias ru='rustup'
alias cwatch='cargo watch -i .gitignore -i "pkg/*" -s "wasm-pack build"'

# python
alias py2='python2'
alias py3='python3'
# alias python='python3'
# alias pip='pip3'

# web assembly
alias wp='wasm-pack'

# OS dependent
case `uname` in
    Darwin)
        # kubernetes - docker desktop
        alias kc='kubectl'
        alias kube='minikube'

        # setup autocomplete in zsh into the current shell
        #source <(kubectl completion zsh)

        # add autocomplete permanently to your zsh shell
        #echo "[[ $commands[kubectl] ]] && source <(kubectl completion zsh)" >> ~/.zshrc

        ;;
    Linux)
        # kubernetes - microk8s
        alias kc='microk8s.kubectl'
        alias m8='microk8s'
        ;;
esac

# functions
function vhelp() {
    vim -u NONE -c "help $1 | only | syntax enable";
}
