{
    "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "explorer.position": "floating",
  "explorer.quitOnOpen": true,
  "explorer.icon.enableVimDevicons": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
      "kubernetes": "https://github.com/garethr/kubernetes-json-schema/blob/master/v1.14.0-standalone/deployment.json"
  }
}
