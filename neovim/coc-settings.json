{
    "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },

  "emmet.includeLanguages": {
      "vue-html": "html"
  },

  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "html", "js", "vue"],
  "coc.preferences.useQuickfixForLocations": true,

  "diagnostic.infoSign": "ღ",
  "diagnostic.hintSign": "ஐ",
  "diagnostic.warningSign": "⚠",
  "diagnostic.errorSign": "✖",
  "diagnostic.enable": true,
  "diagnostic.signOffset": 9999999,
  "diagnostic.highlightOffset": 9999999,
  "diagnostic.refreshOnInsertMode": true,

  "eslint.packageManager": "yarn",

  "explorer.previewAction.onHover": false,
  "explorer.quitOnOpen": true,

  "html.autoClosingTags": true,

  "list.source.mru.ignoreGitIgnore": true,
  "list.source.mru.excludePatterns": [
      "**/.git/*",
      "/tmp/*",
      "**/node_modules/*",
      "**/bower_components/*"
  ],
  "list.source.grep.command": "rg",
  "list.source.tags.command": "ctags -R .",
  "list.source.grep.excludePatterns": [
      ".gitignore",
      ".ignore"
  ],
  "list.source.files.args": [
      "--hidden",
      "--files"
  ],

  "prettier.eslintIntegration": true,
  "prettier.disableLanguages": [],

  "suggest.maxCompleteItemCount": 20,
  "suggest.enablePreselect": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  "yaml.format.enable": true,
  "yaml.schemas": {
      "kubernetes": "/*.yaml"
  }
}
